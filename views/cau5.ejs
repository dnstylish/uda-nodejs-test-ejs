<!DOCTYPE html>
<html>
<%- include('includes/head', { title: "Câu 5" }); -%>
<body class="bg-gray-900 h-screen text-white">
<div>
    <form action="/app/cau5" method="get">
        <section class="py-1 bg-blueGray-50">
            <div class="w-full xl:w-8/12 mb-12 xl:mb-0 px-4 mx-auto mt-24">
                <div class="relative flex flex-col min-w-0 break-words bg-gray-800 w-full mb-6 shadow-lg rounded ">
                    <div class="rounded-t mb-0 px-4 py-3 border-0">
                        <div class="flex flex-wrap items-center">
                            <div class="relative w-full px-4 max-w-full flex-grow flex-1">
                                <h3 class="font-semibold text-base text-blueGray-700">Tìm Khoa</h3>
                            </div>
                        </div>
                    </div>

                    <% if (khoa) { %>

                        <div class="block w-full overflow-x-auto">
                            <table class="items-center bg-transparent w-full border-collapse ">
                                <thead>
                                <tr>
                                    <th class="px-6 align-middle border border-solid border-gray-100 py-3 text-xs uppercase border-l-0 border-r-0 whitespace-nowrap font-semibold text-left">
                                        Mã Khoa
                                    </th>
                                    <th class="px-6 align-middle border border-solid border-gray-100 py-3 text-xs uppercase border-l-0 border-r-0 whitespace-nowrap font-semibold text-left">
                                        Tên Khoa
                                    </th>
                                    <th class="px-6 align-middle border border-solid border-gray-100 py-3 text-xs uppercase border-l-0 border-r-0 whitespace-nowrap font-semibold text-left">
                                        SoCBGD
                                    </th>
                                </tr>
                                </thead>

                                <tbody>
                                <tr>
                                    <th class="border-t-0 px-6 align-middle border-l-0 border-r-0 text-xs whitespace-nowrap p-4 text-left text-blueGray-700 ">
                                        <%= khoa._id %>
                                    </th>
                                    <td class="border-t-0 px-6 align-middle border-l-0 border-r-0 text-xs whitespace-nowrap p-4 ">
                                        <%= khoa.TenKhoa %>
                                    </td>
                                    <td class="border-t-0 px-6 align-center border-l-0 border-r-0 text-xs whitespace-nowrap p-4">
                                        <%= khoa.SoCBGD %>
                                    </td>
                                </tr>
                                </tbody>

                            </table>
                        </div>

                    <% } %>

                    <div class="mt-3 p-2">
                        <input class="bg-gray-50 bg-gray-800 border-b-2 border-white focus:outline-none px-4 py-2 text-gray-600 text-sm w-full" type="text" placeholder="Mã Khoa" name="_id">
                    </div>

                    <button type="submit" class="py-2 w-32 mt-4 ml-2 my-5 bg-blue-600 hover:bg-blue-700 rounded text-sm font-bold text-gray-50 transition duration-200">Tìm</button>


                </div>
            </div>
            <%- include('includes/footer'); -%>
        </section>
    </form>
</div>
</body>
</html>
